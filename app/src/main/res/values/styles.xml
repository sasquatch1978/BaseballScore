<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/title_font</item>
    </style>

    <style name="ScoreText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_top</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/score_color</item>
        <item name="android:textSize">@dimen/score_font</item>
    </style>

    <style name="CountTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/title_font</item>
    </style>

    <style name="CountText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/score_color</item>
        <item name="android:textSize">@dimen/count_font</item>
    </style>

    <style name="TopButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_button</item>
        <item name="android:layout_marginTop">@dimen/margin_header</item>
        <item name="android:alpha">@dimen/alpha</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_button</item>
        <item name="android:alpha">@dimen/alpha</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="BottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">@dimen/alpha</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="BodyLayout">
        <item name="android:layout_width">@dimen/layout_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_side</item>
        <item name="android:layout_marginRight">@dimen/margin_side</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CountLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
